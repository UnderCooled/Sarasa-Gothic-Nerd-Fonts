{
  "version": "0.32.13",
  "description": "Nerd Fonts patched Sarasa Mono TC",
  "homepage": "https://github.com/jonz94/Sarasa-Mono-TC-Nerd-Font",
  "license": "OFL-1.1",
  "url": "https://github.com/jonz94/Sarasa-Mono-TC-Nerd-Font/releases/download/v0.32.13/Sarasa-Mono-TC-Nerd-Font-Complete.ttf",
  "hash": "cf5c3214cfc033a60e28e90c29f9ba073fc20a7ca4f187d3e7017b3720d5373a",
  "installer": {
    "script": [
      "New-Item $HOME\\AppData\\Local\\Microsoft\\Windows\\Fonts -ItemType Directory -ErrorAction SilentlyContinue",
      "Get-ChildItem $dir -filter 'Sarasa-Mono-TC-Nerd-Font-Complete.ttf' | ForEach-Object {",
      "  Copy-Item $_.FullName -destination \"$HOME\\AppData\\Local\\Microsoft\\Windows\\Fonts\"",
      "  Get-ChildItem \"$HOME\\AppData\\Local\\Microsoft\\Windows\\Fonts\" -filter 'Sarasa-Mono-TC-Nerd-Font-Complete.ttf' | ForEach-Object {",
      "    Write-Host $_.FullName",
      "    New-ItemProperty -Path 'HKCU:\\SOFTWARE\\Microsoft\\Windows NT\\CurrentVersion\\Fonts' -Name $_.Name.Replace($_.Extension, ' (TrueType)') -Value $_.FullName -Force | Out-Null",
      "  }",
      "}"
    ]
  },
  "uninstaller": {
    "script": [
      "Get-ChildItem $dir -filter 'Sarasa-Mono-TC-Nerd-Font-Complete.ttf' | ForEach-Object {",
      "  Remove-ItemProperty -Path 'HKCU:\\SOFTWARE\\Microsoft\\Windows NT\\CurrentVersion\\Fonts' -Name $_.Name.Replace($_.Extension, ' (TrueType)') -Force -ErrorAction SilentlyContinue",
      "  Remove-Item \"$HOME\\AppData\\Local\\Microsoft\\Windows\\Fonts\\$($_.Name)\" -Force -ErrorAction SilentlyContinue",
      "}",
      "Write-Host \"The 'Sarasa Mono TC Nerd Font' has been uninstalled and will not be present after restarting your computer.\" -Foreground Magenta"
    ]
  }
}
